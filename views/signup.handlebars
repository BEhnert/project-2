<div class="container">
    <div class="wrapper">
        <div class="row" style="margin-top: 5%;">
            <div class="col">

            </div>
            <div class="col">            
                <form class="register-user">
                    <div class="form-group">
                        <label for="user-name" >User Name:</label>
                        <input id="user-name" name="user-name" type="text" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="user-email" >User email:</label>
                        <input id="user-email" name="user-email" type="email" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Create your password:</label>
                        <input id="password" name="password" type="password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="confirm">Confirm your password:</label>
                        <input id="confirm" name="confirm" type="password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm register">Register</button>
                    <a href="/" class="btn btn-primary btn-sm" alt="Back to main menu">Back to Main</a>
                </form>
            </div>
            <div class="col">

            </div>
        </div>
    </div>
</div>